{
  "version": 2,
  "builds": [
    {
      "src": "app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.py" },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
